# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"
alias .....="cd ../../../../"
alias ~="cd ~"

# or use Navigate by .1 .2 .3 .4 for ../ ../../ ../../../ ../../../../
dotSlash=""
for i in 1 2 3 4
do
    dotSlash=${dotSlash}'../';
    baseName=".${i}"
    alias $baseName="cd ${dotSlash}"
done

